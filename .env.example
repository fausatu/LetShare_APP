# LetShare - .env.example
# Copy this file to `.env` and fill with your production values.
# NEVER commit real credentials to version control.

APP_ENV=production

# Database
DB_HOST=
DB_NAME=
DB_USER=
DB_PASS=
DB_CHARSET=utf8mb4

# JWT
JWT_SECRET=

# Pusher (real-time)
PUSHER_APP_ID=
PUSHER_KEY=
PUSHER_SECRET=
PUSHER_CLUSTER=

# Brevo (emails)
BREVO_API_KEY=

# Google / Translate
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_TRANSLATE_API_KEY=

# SMTP (email)
SMTP_HOST=
SMTP_PORT=465
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=

# Web Push (VAPID)
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:admin@example.com

# Optional
NGROK_AUTH_TOKEN=
